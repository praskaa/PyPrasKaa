<!--
XAML Definition for the Main Dialog Window
This file defines the layout and controls for the user interface.
-->
<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Family Profile Updater" Height="600" Width="700" MinHeight="500" MinWidth="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Profile Type Selection -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <Label Content="Select Profile Type:"/>
            <ComboBox x:Name="ProfileTypeComboBox" SelectionChanged="profile_type_changed"/>
        </StackPanel>

        <!-- CSV File Selection -->
        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <Label Content="CSV File Location:"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="CsvPathTextBox" IsReadOnly="True" VerticalContentAlignment="Center"/>
                <Button x:Name="BrowseButton" Content="Browse" Grid.Column="1" Margin="5,0,0,0" Click="browse_for_csv"/>
            </Grid>
        </StackPanel>

        <!-- Preview Area -->
        <GroupBox Grid.Row="2" Header="Format Preview" Margin="0,0,0,10">
            <TextBlock x:Name="PreviewTextBlock" Text="ℹ️ Please select a profile type to see format preview." Padding="5" TextWrapping="Wrap"/>
        </GroupBox>

        <!-- Progress Bar -->
        <StackPanel Grid.Row="3" Margin="0,5,0,10">
            <ProgressBar x:Name="ProgressBar" Height="20"/>
            <TextBlock x:Name="ProgressTextBlock" Text="" TextAlignment="Center" Margin="0,2,0,0"/>
        </StackPanel>

        <!-- Log Area -->
        <GroupBox Grid.Row="4" Header="Processing Log">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="LogTextBlock" Padding="5" TextWrapping="Wrap"/>
            </ScrollViewer>
        </GroupBox>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="ProcessButton" Content="Process" Width="100" Height="30" Margin="0,0,10,0" Click="process_data" IsEnabled="False"/>
            <Button x:Name="CloseButton" Content="Close" Width="100" Height="30" Click="close_dialog"/>
        </StackPanel>
    </Grid>
</Window>