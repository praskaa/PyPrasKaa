<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Multi-Layer Area Reinforcement Configuration" 
        Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#F5F5F5">
    
    <Window.Resources>
        <!-- Color Definitions -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#3498DB"/>
        <SolidColorBrush x:Key="SuccessColor" Color="#27AE60"/>
        <SolidColorBrush x:Key="DangerColor" Color="#E74C3C"/>
        <SolidColorBrush x:Key="DarkColor" Color="#2C3E50"/>
        <SolidColorBrush x:Key="LightGray" Color="#ECF0F1"/>
        
        <!-- Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#ECF0F1"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#BDC3C7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
        </Style>

        <!-- Success Button Style -->
        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="{StaticResource SuccessColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource SuccessColor}"/>
        </Style>

        <!-- Danger Button Style -->
        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="{StaticResource DangerColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource DangerColor}"/>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" Background="{StaticResource DarkColor}" Padding="20,15">
            <StackPanel>
                <TextBlock Text="âš¡ Multi-Layer Area Reinforcement Configuration" 
                          Foreground="White" 
                          FontSize="16" 
                          FontWeight="Bold"
                          Margin="0,0,0,10"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Foreground="White" FontSize="11" Opacity="0.9">
                        <Run Text="ðŸ“‹ Filled Region: " FontWeight="Bold"/>
                        <Run Text="ID " x:Name="txtFilledRegionId"/>
                    </TextBlock>
                    
                    <TextBlock Grid.Column="1" Foreground="White" FontSize="11" Opacity="0.9">
                        <Run Text="ðŸ—ï¸ Host: " FontWeight="Bold"/>
                        <Run Text="" x:Name="txtHostName"/>
                    </TextBlock>
                    
                    <TextBlock Grid.Column="2" Foreground="White" FontSize="11" Opacity="0.9">
                        <Run Text="ðŸ‘ï¸ View: " FontWeight="Bold"/>
                        <Run Text="" x:Name="txtViewName"/>
                    </TextBlock>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                
                <!-- Layer Configuration Section -->
                <Border Background="White" 
                        CornerRadius="8" 
                        Padding="20" 
                        Margin="0,0,0,20"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="ðŸ”§ Layer Configuration" 
                                  FontSize="14" 
                                  FontWeight="Bold" 
                                  Foreground="{StaticResource DarkColor}"
                                  Margin="0,0,0,15"/>

                        <!-- Toolbar -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <Button Content="âž• Add Layer" 
                                   Style="{StaticResource PrimaryButton}"
                                   Click="AddLayer_Click"/>
                            <Button Content="âž– Remove Selected" 
                                   Style="{StaticResource ModernButton}"
                                   Click="RemoveSelected_Click"/>
                            <Button Content="ðŸ“‹ Duplicate" 
                                   Style="{StaticResource ModernButton}"
                                   Click="Duplicate_Click"/>
                            <Button Content="â¬†ï¸ Move Up" 
                                   Style="{StaticResource ModernButton}"
                                   Click="MoveUp_Click"/>
                            <Button Content="â¬‡ï¸ Move Down" 
                                   Style="{StaticResource ModernButton}"
                                   Click="MoveDown_Click"/>
                            <Button Content="ðŸ—‘ï¸ Clear All" 
                                   Style="{StaticResource DangerButton}"
                                   Click="ClearAll_Click"/>
                        </StackPanel>

                        <!-- DataGrid for Layers -->
                        <DataGrid x:Name="layersDataGrid" 
                                 AutoGenerateColumns="False"
                                 CanUserAddRows="False"
                                 CanUserDeleteRows="False"
                                 GridLinesVisibility="All"
                                 HeadersVisibility="Column"
                                 BorderBrush="#E0E0E0"
                                 BorderThickness="1"
                                 RowHeight="35"
                                 AlternatingRowBackground="#F9F9F9"
                                 FontSize="12">
                            
                            <DataGrid.Columns>
                                <!-- Select Column -->
                                <DataGridCheckBoxColumn Header="â˜‘ï¸" 
                                                       Binding="{Binding IsSelected}"
                                                       Width="40"/>
                                
                                <!-- Layer Number -->
                                <DataGridTextColumn Header="Layer" 
                                                   Binding="{Binding LayerNumber}"
                                                   Width="60"
                                                   IsReadOnly="True">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="Foreground" Value="#3498DB"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!-- Position -->
                                <DataGridComboBoxColumn Header="Position" 
                                                       SelectedItemBinding="{Binding Position}"
                                                       Width="100">
                                    <DataGridComboBoxColumn.ElementStyle>
                                        <Style TargetType="ComboBox">
                                            <Setter Property="ItemsSource">
                                                <Setter.Value>
                                                    <x:Array Type="sys:String" xmlns:sys="clr-namespace:System;assembly=mscorlib">
                                                        <sys:String>Bottom</sys:String>
                                                        <sys:String>Top</sys:String>
                                                    </x:Array>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </DataGridComboBoxColumn.ElementStyle>
                                </DataGridComboBoxColumn>

                                <!-- Diameter -->
                                <DataGridTextColumn Header="Diameter (mm)" 
                                                   Binding="{Binding Diameter}"
                                                   Width="120">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!-- Spacing -->
                                <DataGridTextColumn Header="Spacing (mm)" 
                                                   Binding="{Binding Spacing}"
                                                   Width="120">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!-- Bar Type -->
                                <DataGridComboBoxColumn Header="Bar Type" 
                                                       DisplayMemberPath="Name"
                                                       SelectedValuePath="Id"
                                                       SelectedValueBinding="{Binding RebarBarTypeId}"
                                                       Width="150"/>

                                <!-- Direction -->
                                <DataGridComboBoxColumn Header="Direction" 
                                                       SelectedItemBinding="{Binding Direction}"
                                                       Width="100">
                                    <DataGridComboBoxColumn.ElementStyle>
                                        <Style TargetType="ComboBox">
                                            <Setter Property="ItemsSource">
                                                <Setter.Value>
                                                    <x:Array Type="sys:String" xmlns:sys="clr-namespace:System;assembly=mscorlib">
                                                        <sys:String>X</sys:String>
                                                        <sys:String>Y</sys:String>
                                                    </x:Array>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </DataGridComboBoxColumn.ElementStyle>
                                </DataGridComboBoxColumn>

                                <!-- Active -->
                                <DataGridCheckBoxColumn Header="Active" 
                                                       Binding="{Binding IsActive}"
                                                       Width="60"/>

                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Validation Message -->
                        <TextBlock x:Name="txtValidation" 
                                  Text="âš ï¸ Validation errors will appear here"
                                  Foreground="{StaticResource DangerColor}"
                                  FontSize="11"
                                  Margin="0,10,0,0"
                                  Visibility="Collapsed"/>
                    </StackPanel>
                </Border>

                <!-- Summary & Preview Section -->
                <Border Background="White" 
                        CornerRadius="8" 
                        Padding="20" 
                        BorderBrush="#E0E0E0"
                        BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="ðŸ“Š Summary &amp; Preview" 
                                  FontSize="14" 
                                  FontWeight="Bold" 
                                  Foreground="{StaticResource DarkColor}"
                                  Margin="0,0,0,15"/>

                        <!-- Summary Cards -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Total Layers Card -->
                            <Border Grid.Column="0" 
                                   Background="#667EEA" 
                                   CornerRadius="8" 
                                   Padding="20"
                                   Margin="0,0,10,0">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock x:Name="txtTotalLayers" 
                                              Text="0" 
                                              Foreground="White" 
                                              FontSize="32" 
                                              FontWeight="Bold"
                                              HorizontalAlignment="Center"/>
                                    <TextBlock Text="TOTAL LAYERS" 
                                              Foreground="White" 
                                              FontSize="10" 
                                              Opacity="0.9"
                                              HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Instances Card -->
                            <Border Grid.Column="1" 
                                   Background="#27AE60" 
                                   CornerRadius="8" 
                                   Padding="20"
                                   Margin="0,0,10,0">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock x:Name="txtInstanceCount" 
                                              Text="0" 
                                              Foreground="White" 
                                              FontSize="32" 
                                              FontWeight="Bold"
                                              HorizontalAlignment="Center"/>
                                    <TextBlock Text="INSTANCES CREATED" 
                                              Foreground="White" 
                                              FontSize="10" 
                                              Opacity="0.9"
                                              HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Max Cover Card -->
                            <Border Grid.Column="2" 
                                   Background="#E74C3C" 
                                   CornerRadius="8" 
                                   Padding="20">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock x:Name="txtMaxCover" 
                                              Text="0mm" 
                                              Foreground="White" 
                                              FontSize="32" 
                                              FontWeight="Bold"
                                              HorizontalAlignment="Center"/>
                                    <TextBlock Text="MAX COVER OFFSET" 
                                              Foreground="White" 
                                              FontSize="10" 
                                              Opacity="0.9"
                                              HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <!-- Instance Preview -->
                        <Border Background="#F8F9FA" 
                               BorderBrush="#E0E0E0"
                               BorderThickness="1"
                               CornerRadius="4"
                               Padding="15">
                            <StackPanel>
                                <TextBlock Text="ðŸ” Area Reinforcement Instances Preview:" 
                                          FontSize="12" 
                                          FontWeight="Bold"
                                          Foreground="{StaticResource DarkColor}"
                                          Margin="0,0,0,10"/>
                                
                                <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto">
                                    <ItemsControl x:Name="instancePreviewList">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="White"
                                                       BorderBrush="#E0E0E0"
                                                       BorderThickness="1"
                                                       CornerRadius="4"
                                                       Padding="12"
                                                       Margin="0,0,0,8">
                                                    <StackPanel>
                                                        <Grid Margin="0,0,0,6">
                                                            <TextBlock Text="{Binding InstanceName}" 
                                                                      FontWeight="Bold"
                                                                      FontSize="11"
                                                                      Foreground="{StaticResource DarkColor}"/>
                                                            <TextBlock Text="{Binding Direction}" 
                                                                      HorizontalAlignment="Right"
                                                                      FontSize="10"
                                                                      Foreground="White"
                                                                      Background="#E74C3C"
                                                                      Padding="4,2"
                                                                      FontWeight="Bold"/>
                                                        </Grid>
                                                        <TextBlock Text="{Binding Details}" 
                                                                  FontSize="10"
                                                                  Foreground="#7F8C8D"
                                                                  TextWrapping="Wrap"/>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" 
                Background="#F8F9FA" 
                BorderBrush="#E0E0E0"
                BorderThickness="0,1,0,0"
                Padding="20,15">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <TextBlock Text="âš™ï¸ PyRevit Extension v1.0" 
                              FontSize="11" 
                              Foreground="#7F8C8D"
                              VerticalAlignment="Center"
                              Margin="0,0,15,0"/>
                    <Button Content="ðŸ’¾ Save Template" 
                           Style="{StaticResource ModernButton}"
                           Click="SaveTemplate_Click"/>
                    <Button Content="ðŸ“‚ Load Template" 
                           Style="{StaticResource ModernButton}"
                           Click="LoadTemplate_Click"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="âŒ Cancel" 
                           Style="{StaticResource ModernButton}"
                           Click="Cancel_Click"
                           Width="100"/>
                    <Button x:Name="btnCreate"
                           Content="âœ… Create Area Reinforcement" 
                           Style="{StaticResource SuccessButton}"
                           Click="Create_Click"
                           Width="220"
                           Margin="0"/>
                </StackPanel>
            </Grid>
        </Border>

    </Grid>
</Window>